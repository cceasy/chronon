from ai.chronon.staging_query import EngineType, StagingQuery, TableDependency


def get_select_star_export(table: str, partition_column: str = "_PARTITIONTIME"):
    bigquery_export_sql = f"""
    SELECT
        *
    FROM demo.`{% raw %}{table}{% endraw %}`
    WHERE
    TIMESTAMP_TRUNC({% raw %}{partition_column}{% endraw %}, DAY) BETWEEN {% raw %}{{{{ start_date }}}}{% endraw %} AND {% raw %}{{{{ end_date }}}}{% endraw %}
    """


    return StagingQuery(
        query=bigquery_export_sql,
        output_namespace="data",
        engine_type=EngineType.BIGQUERY,
        dependencies=[
            TableDependency(table=f"demo.`{% raw %}{table}{% endraw %}`", partition_column=partition_column, offset=0)
        ],
        version=0,
    )


def get_native_partition_export(table: str, partition_column: str):
    native_partition_sql = f"""
    SELECT
        *,
        TIMESTAMP_TRUNC({% raw %}{partition_column}{% endraw %}, DAY) as ds
    FROM demo.`{% raw %}{table}{% endraw %}`
    WHERE
    {% raw %}{partition_column}{% endraw %} BETWEEN {% raw %}{{{{ start_date }}}}{% endraw %} AND {% raw %}{{{{ end_date }}}}{% endraw %}
    """
    return StagingQuery(
        query=native_partition_sql,
        output_namespace="data",
        engine_type=EngineType.BIGQUERY,
        dependencies=[
            TableDependency(table=f"demo.`{% raw %}{table}{% endraw %}`", partition_column=partition_column, offset=0)
        ],
        version=0,
    )



